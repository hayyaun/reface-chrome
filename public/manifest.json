{
  "name": "Reface",
  "description": "Better browsing experience with Reface extension",
  "version": "1.0.7",
  "manifest_version": 3,
  "icons": {
    "16": "assets/logo-duo16.png",
    "32": "assets/logo-duo32.png",
    "64": "assets/logo-duo64.png",
    "128": "assets/logo-duo128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo16.png",
      "32": "assets/logo32.png",
      "64": "assets/logo64.png",
      "128": "assets/logo128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "scripting",
    "downloads",
    "bookmarks"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
