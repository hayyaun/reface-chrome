{
  "name": "Reface",
  "description": "Better browsing experience with Reface extension",
  "version": "1.0.8",
  "manifest_version": 3,
  "icons": {
    "16": "images/logo-duo16.png",
    "32": "images/logo-duo32.png",
    "64": "images/logo-duo64.png",
    "128": "images/logo-duo128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "64": "images/logo64.png",
      "128": "images/logo128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "webNavigation", "storage", "scripting", "downloads", "bookmarks"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "reface@chrome.com"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
