{
  "name": "Reface",
  "description": "Better browsing experience with Reface extension",
  "version": "1.0.7",
  "manifest_version": 2,
  "icons": {
    "16": "images/logo-duo16.png",
    "32": "images/logo-duo32.png",
    "64": "images/logo-duo64.png",
    "128": "images/logo-duo128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "64": "images/logo64.png",
      "128": "images/logo128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "webNavigation", "storage", "downloads", "bookmarks", "<all_urls>"],
  "web_accessible_resources": ["images/*"]
}
